{
    "compilerOptions": {
      "baseUrl": "./packages",
      "module": "esnext",
      "target": "es2015",
      "moduleResolution": "Node",
      "strict": true,
      "allowJs": true,
      "resolveJsonModule": true,
      "declaration": true,
      "emitDeclarationOnly": true,
      "esModuleInterop": true
    },
    "include": ["packages/**/*/type.ts", "packages/**/*/API.ts"],
    "exclude": ["node_modules", "**/__tests__/**", "**/types/**"]
}
