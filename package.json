{
  "name": "e-plus-ui",
  "version": "1.5.2",
  "license": "MIT",
  "description": "a component library for Vue 3",
  "workspaces": [
    "docs",
    "play"
  ],
  "scripts": {
    "dev": "pnpm -C play dev",
    "build:release": "esno script/release.ts",
    "dev:docs": "pnpm -C docs dev",
    "build:docs": "pnpm -C docs docs:build",
    "dev:layer": "pnpm -C docs/document-layer dev",
    "build": "npm run build:all && npm run build:es && npm run build:umd && npm run build:dts",
    "build:all": "vite build --emptyOutDir --config ./script/build.all.ts",
    "build:es": "vite build --emptyOutDir --config ./script/build.es.ts",
    "build:umd": "vite build --emptyOutDir --config ./script/build.umd.ts",
    "build:dts": "tsx --tsconfig tsconfig.build.json ./script/build.dts.ts",
    "build:components": "node script/build.globalComponents.mjs",
    "build:types": " node ./script/generate.docs.js",
    "build:table": " node ./script/generate.table.js",
    "test": "vitest run",
    "remove": "rimraf docs/node_modules/ play/node_modules/ ./node_modules/",
    "lint:eslint": "eslint \"packages/**/*.{vue,ts,tsx}\" --fix",
    "lint:prettier": "prettier --write \"packages/**/*.{vue,ts}\"",
    "prepare": "husky install",
    "release": "standard-version",
    "release:alpha": "npm run build&&standard-version --prerelease alpha",
    "release:rc": "standard-version --prerelease rc",
    "release:major": "npm run release -- --release-as major",
    "release:minor": "npm run release -- --release-as minor",
    "release:patch": "npm run release -- --release-as patch",
    "release-static": "standard-version --release-as 1.3.1",
    "changelog": "conventional-changelog -p custom-config -i CHANGELOG.md -s -r 0  -n ./changelog-option.js",
    "version": "conventional-changelog -p custom-config -i CHANGELOG.md -s -n ./changelog-option.js",
    "commit": "git add . && git-cz && git push"
  },
  "dependencies": {
    "@e-plus-ui/icons": "^1.3.0",
    "@element-plus/icons-vue": "^2.3.1",
    "@eqian/utils-vue": "^3.1.0",
    "element-plus": "^2.7.6",
    "vue": "^3.4.31"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-typescript": "^7.15.0",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@microsoft/api-extractor": "^7.34.4",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^18.11.9",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vitejs/plugin-vue-jsx": "^4.0.0",
    "@vue/compiler-sfc": "3.4.31",
    "@vue/runtime-core": "3.4.31",
    "@vue/server-renderer": "3.4.31",
    "@vue/test-utils": "2.4.5",
    "autoprefixer": "^10.4.19",
    "clsx": "^2.1.1",
    "commitizen": "^4.2.4",
    "commitlint-config-cz": "^0.13.3",
    "compare-func": "^2.0.0",
    "components-helper": "2.1.3",
    "consola": "^3.2.3",
    "conventional-changelog": "^6.0.0",
    "conventional-changelog-cli": "^5.0.0",
    "conventional-changelog-custom-config": "^0.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^6.3.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.2.0",
    "esno": "^4.7.0",
    "execa": "^6.1.0",
    "fs-extra": "^11.2.0",
    "globby": "^14.0.2",
    "happy-dom": "9.8.2",
    "husky": "^8.0.1",
    "less": "^4.1.3",
    "postcss": "^8.4.38",
    "postcss-import": "^16.1.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "rollup": "^4.9.4",
    "sass": "^1.77.6",
    "standard-version": "^9.5.0",
    "tailwind-merge": "^2.3.0",
    "tailwindcss": "^3.4.4",
    "ts-morph": "^22.0.0",
    "tsx": "^4.10.5",
    "typedoc": "^0.26.5",
    "typedoc-plugin-markdown": "^4.2.4",
    "typescript": "^5.4.5",
    "vite": "5.2.11",
    "vitest": "1.4.0",
    "vue-component-meta": "^1.0.8",
    "vue-tsc": "^2.0.29"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "lint-staged": {
    "packages/**/*.{vue,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
