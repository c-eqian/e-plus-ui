{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "declaration": true,
    "composite": true,
    "noImplicitAny": false,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "declarationDir": "e-plus-ui/types",
    "jsx": "preserve",
    "jsxFactory": "h",
    "paths": {
      "element-plus": ["node_modules/element-plus"]
    },
    "types": ["vite/client", "element-plus/global"],
    "skipLibCheck": true,
    "lib": ["ESNext","DOM"]
  },
  "vueCompilerOptions": {
    "lib": "@vue/runtime-core",
  },
  "include": ["packages/**/*.ts", "packages/**/*.js", "packages/**/*.d.ts",
    "packages/**/*.tsx", "packages/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/**",
    "packages/vitest.config.ts",
    "packages/shims-vue.d.ts"
  ]
}
