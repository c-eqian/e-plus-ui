{
  "extends": "./tsconfig.dts.json",
  "compilerOptions": {
      "skipLibCheck": true,
      "declaration": true,
      "composite": true,
      "jsxFactory": "h",
      "emitDeclarationOnly": true,
      "noImplicitAny": false,
      "emitDecoratorMetadata": false,
      "types": ["vite/client", "element-plus/global"]
    },
  "include": ["packages/**/*.ts", "packages/**/*.js", "packages/**/*.d.ts",
    "packages/**/*.tsx", "packages/**/*.vue"
  ]
}
